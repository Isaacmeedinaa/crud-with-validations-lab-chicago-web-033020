<h1>Song Edit Form</h1>

<% if @song.errors.any? %>
    <p style="color: red">Invalid!</p>
    <% @song.errors.full_messages.each do |message| %>
        <p style="color: red"><%= message %></p>
    <% end %>
<% end %>

<%= form_for(@song) do |f| %>
    <%= f.label :title, "Song title:" %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :artist_name, "Written by:" %>
    <%= f.text_field :artist_name %>
    <br>
    <br>
    <%= f.label :genre, "Song genre:" %>
    <%= f.text_field :genre %>
    <br>
    <br>
    <%= f.label :released, "Song released:" %>
    <%= f.check_box :released %>
    <br>
    <br>
    <%= f.label :release_year, "Release Year:" %>
    <%= f.text_field :release_year %>
    <br>
    <br>
    <%= f.submit %>
<% end %>

<h3><%= link_to "Back to song", song_path(@song) %></h3>