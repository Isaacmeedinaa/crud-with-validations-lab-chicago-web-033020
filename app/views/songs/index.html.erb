<h1>All songs:</h1>

<h3><%= link_to "Create a new song", new_song_path %></h3>

<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Genre</th>
        <th>Artist name</th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%= song.title %></td>
          <td><%= song.release_year %></td>
          <td><%= song.genre %></td>
          <td><%= song.artist_name %></td>
          <td>
            <%= link_to 'View', song %> |
            <%= link_to 'Edit', edit_song_path(song) %> |
            <%= link_to 'Delete', song, method: :delete, data: { confirm: 'Want to delete?' } %>
          </td>
        </tr>
      <% end %>
    </tbody